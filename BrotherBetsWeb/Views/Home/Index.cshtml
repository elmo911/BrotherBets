@model IEnumerable<BrotherBetsLibrary.Models.Bet>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Brother Bets</h1>
    <p class="lead">Show your skils</p>
</div>

<h3>Bets</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expiration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expiration)
            </td>
            <td>
                @Html.ActionLink("Make A Guess", "Guess", new { id=item.Id })
            </td>
        </tr>
    }

</table>